# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[.gitmodules]
indent_style = tab

[*.svg]
# Machine generated, as compact as possible
insert_final_newline = unset

[*.xml]
# Often machine generated
insert_final_newline = unset

[*.java.diff]
# The files are prefixed with a single space, + or -, then indented in 2s after that
indent_size = 1
trim_trailing_whitespace = false

[*.patch]
# Trailing spaces are significant in patch files
trim_trailing_whitespace = false

[messages.properties]
# Trailing spaces are significant in internationalisation files (although they really should be got rid of)
trim_trailing_whitespace = false

[*.py]
# Python uses 4 space indentation by language convention
indent_size = 4

[*.md]
max_line_length = 90
